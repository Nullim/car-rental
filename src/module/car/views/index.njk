{% extends "view/layout/home.njk" %}
{% block body %}
  <section class="section">
    <div class="container">
      <nav class="columns">
        <div class="column has-text-centered">
          <p class="heading">Total Cars</p>
          <p class="title">{{ cars.length }}</p>
        </div>
        <div class="column has-text-centered">
          <div>
            <p class="heading">Available Cars</p>
            <p class="title">1</p>
          </div>
        </div>
        <div class="column has-text-centered">
          <div>
            <p class="heading">Reservations</p>
            <p class="title">0</p>
          </div>
        </div>
      </nav>
    </div>
  </section>
    {% if lastAddedCar %}
    <section class="hero">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">Last Added Car</h1>
          <table class="table">
            <tbody>
              <tr>
                <th>ID</th>
                <td>{{ lastAddedCar.id }}</td>
              </tr>
              <tr>
                <th>Brand</th>
                <td>{{ lastAddedCar.brand }}</td>
              </tr>
              <tr>
                <th>Model</th>
                <td>{{ lastAddedCar.model }}</td>
              </tr>
              <tr>
                <th>Year</th>
                <td>{{ lastAddedCar.year }}</td>
              </tr>
              <tr>
                <th>Kilometers</th>
                <td>{{ lastAddedCar.kms }} kms</td>
              </tr>
              <tr>
                <th>Color</th>
                <td>{{ lastAddedCar.color }}</td>
              </tr>
              <tr>
                <th>Air Conditioning</th>
                <td>{{ lastAddedCar.ac }}</td>
              </tr>
              <tr>
                <th>Max passengers</th>
                <td>{{ lastAddedCar.passengers }}</td>
              </tr>
              <tr>
                <th>Transmission</th>
                <td>{{ lastAddedCar.transmission }}</td>
              </tr>
              <tr>
                <th>Price</th>
                <td>$ {{ lastAddedCar.price }}</td>
              </tr>
              <tr>
                <th>Created</th>
                <td>{{ lastAddedCar.createdAt }}</td>
              </tr>
              <tr>
                <th>Updated</th>
                <td>{{ lastAddedCar.updatedAt }}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>
    {% endif %}
  <section>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Kilometers</th>
            <th>Color</th>
            <th>Air Conditioning</th>
            <th>Max Passengers</th>
            <th>Transmission</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for car in cars %}
            {% include "car/views/layout/car-list.njk" %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
{% endblock %}