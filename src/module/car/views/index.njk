{% extends "view/layout/home.njk" %}
{% block body %}
  <section class="section">
    <div class="container">
      <nav class="level">
        <div class="level-item has-text-centered">
          <p class="heading">Total Cars</p>
          <p class="title">{{ cars.length }}</p>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Available Cars</p>
            <p class="title">1</p>
          </div>
        </div>
        <div class="level-item has-text-centered">
          <div>
            <p class="heading">Reservations</p>
            <p class="title">0</p>
          </div>
        </div>
      </nav>
    </div>
  </section>
  <section class="hero">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
        Last Added Car
      </h1>
        <ul class="subtitle">
          <li>ID: {{ cars[cars.length - 1].id }}</li>
          <li>Brand: {{ cars[cars.length - 1].brand }}</li>
          <li>Model: {{ cars[cars.length - 1].model }}</li>
          <li>Year: {{ cars[cars.length - 1].year }}</li>
          <li>Kilometers: {{ cars[cars.length - 1].kms }}</li>
          <li>Color: {{ cars[cars.length - 1].color }}</li>
          <li>Air Conditioner: {{ cars[cars.length - 1].ac }}</li>
          <li>Max passengers: {{ cars[cars.length - 1].passengers }}</li>
          <li>Transmission: {{ cars[cars.length - 1].transmission }}</li>
          <li>Price: {{ cars[cars.length - 1].price }}$</li>
          <li>Created: {{ cars[cars.length - 1].createdAt }}</li>
          <li>Updated: {{ cars[cars.length - 1].updatedAt }}</li>
        </ul>
      </div>
    </div>
  </section>
  <section>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Kilometers</th>
            <th>Color</th>
            <th>Air Conditioning</th>
            <th>Max Passengers</th>
            <th>Transmission</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for car in cars %}
            {% include "car/views/layout/car-list.njk" %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </section>
{% endblock %}